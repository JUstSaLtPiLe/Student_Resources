@model StudentResourcesAPI.Models.Clazz
@{
    ViewData["Title"] = "AddStudents";
    var students = ViewData["students"] as List<Account>;
}

<h4>Clazz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveStudents">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="clazzId" value="@Model.ClazzId" />
            <div class="form-group">
                <label class="control-label">Students</label>
                <select class="form-group" multiple name="accountIds[]">
                    @foreach (var s in students)
                    {
                        <option value="@s.AccountId"> @s.GeneralInformation.Name </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
